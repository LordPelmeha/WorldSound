<body>
<header class="headercontainer">
  <div class="header-logo">
    <div class="header-logo-text">
      <%= image_tag 'sitelogo.png', alt: 'Логотип сайта', id: 'logo-image', class: 'logo' %>
    </div>
  </div>
  <div class="header-title">
    <h1>Музыка мира</h1>
  </div>
  <nav class="header-nav">
    <ul>
      <li><%= link_to 'Главная', root_path %></li>
      <li><%= link_to 'Жанры', genres_path %></li>
      <li><%= link_to 'Легенды', legends_path %></li>
      <li><%= link_to 'Контакты', contact_path %></li>
    </ul>
  </nav>

  <!-- Блок для входа/регистрации -->
  <div class="header-account">
    <%= link_to 'Зарегистрироваться', signup_path %>
  </div>
</header>

<!-- Блок для отображения уведомлений -->
<% if notice %>
  <div class="alert alert-notice"><%= notice %></div>
<% end %>

<!-- Контейнер для снега -->
<div class="snow-container"></div>

<%= yield %>

<footer class="footer">
  <p>&copy; 2024 Музыка со всего мира | Все права защищены</p>
</footer>
</body>
